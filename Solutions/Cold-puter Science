
public class BelowZeroCount {

	public static void main(String[] args) {
		Kattio io = new Kattio(System.in, System.out);
		
		int n = io.getInt();
		int count = 0;
		
		while(n!=0) {
			if(io.getInt() < 0)
				count++;
			n--;
		}
		System.out.println(count);
		
		io.close();
		System.exit(0);
	}
}
